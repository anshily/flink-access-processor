<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.flinkmonitorbackend.mapper.AlertRecordMapper">
    <select id="findAll" resultType="AlertRecord">
        SELECT * FROM alert_records ORDER BY created_at DESC
    </select>
    
    <select id="findByEmployeeId" resultType="AlertRecord" parameterType="String">
        SELECT * FROM alert_records WHERE employee_id = #{employeeId} ORDER BY created_at DESC
    </select>
</mapper>