<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.flinkmonitorbackend.mapper.ConsecutiveWorkDaysMapper">
    <select id="findAll" resultType="ConsecutiveWorkDays">
        SELECT * FROM consecutive_work_days ORDER BY consecutive_days DESC
    </select>
    
    <select id="findByEmployeeId" resultType="ConsecutiveWorkDays" parameterType="String">
        SELECT * FROM consecutive_work_days WHERE employee_id = #{employeeId}
    </select>
</mapper>